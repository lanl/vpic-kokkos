begin_globals {
};

begin_initialization {
  double L  = 1e10;
  int npart = 131;

  define_units( 1, 1 );
  define_timestep( 1 );
  define_periodic_grid( 0, 0, 0,   // Grid low corner
                        L, L, L,   // Grid high corner
                        1, 1, 1,   // Grid resolution
                        1, 1, 1 ); // Processor configuration
  define_material("vacuum",1.0,1.0,0.0);
  define_field_array();

  field(1,1,1).ex  = 0;
  field(1,2,1).ex  = 1;
  field(1,1,2).ex  = 2;
  field(1,2,2).ex  = 3;

  field(1,1,1).ey  = 4;
  field(1,1,2).ey  = 5;
  field(2,1,1).ey  = 6;
  field(2,1,2).ey  = 7;

  field(1,1,1).ez  = 8;
  field(2,1,1).ez  = 9;
  field(1,2,1).ez  = 10;
  field(2,2,1).ez  = 11;

  KOKKOS_COPY_FIELD_MEM_TO_DEVICE(field_array);

  species_t* sp; // We use this to iterate over species

  species_t * this_sp = define_species( "test_species", 0.5, 0.5, npart, npart, 0, 0 );

  // Hack into vpic internals

  int failed = 0;

  KOKKOS_COPY_INTERPOLATOR_MEM_TO_DEVICE(interpolator_array);
  interpolator_array->load( field_array );

  this_sp->np = npart;

# define test_e(X,DX,DY,DZ,VAL)                         \
  for( int n=0; n<npart; n++ ) {                        \
    this_sp->p[n].i  = voxel(1,1,1);                         \
    this_sp->p[n].dx = DX;                                   \
    this_sp->p[n].dy = DY;                                   \
    this_sp->p[n].dz = DZ;                                   \
    this_sp->p[n].ux = 0;                                    \
    this_sp->p[n].uy = 0;                                    \
    this_sp->p[n].uz = 0;                                    \
    this_sp->p[n].w  = fabs( normal( rng(0), 0, 1 ) );       \
  }                                                     \
  KOKKOS_COPY_PARTICLE_MEM_TO_DEVICE(species_list); \
  this_sp->advance( accumulator_array, interpolator_array ); \
  KOKKOS_COPY_PARTICLE_MEM_TO_HOST(species_list); \
  for( int n=0; n<npart; n++ ) {                        \
    if( this_sp->p[n].u##X != VAL ) {                        \
      failed++;                                         \
      sim_log(  "e"#X << " "                            \
                << DX << " "                            \
                << DY << " "                            \
                << DZ << " "                            \
                << VAL << " "                           \
                << n << " "                             \
                << this_sp->p[n].i << " "                    \
                << this_sp->p[n].dx << " "                   \
                << this_sp->p[n].dy << " "                   \
                << this_sp->p[n].dz << " "                   \
                << this_sp->p[n].ux << " "                   \
                << this_sp->p[n].uy << " "                   \
                << this_sp->p[n].uz << " "                   \
                << this_sp->p[n].w );                        \
    }                                                   \
  }

  test_e(x,0,-1,-1,0);
  test_e(x,0, 1,-1,1);
  test_e(x,0,-1, 1,2);
  test_e(x,0, 1, 1,3);

  test_e(y,-1,0,-1,4);
  test_e(y,-1,0, 1,5);
  test_e(y, 1,0,-1,6);
  test_e(y, 1,0, 1,7);

  test_e(z,-1,-1,0,8);
  test_e(z, 1,-1,0,9);
  test_e(z,-1, 1,0,10);
  test_e(z, 1, 1,0,11);

  if( failed ) { sim_log( "FAIL" ); abort(1); }
  sim_log( "pass" );
  halt_mp();
  exit(0);
}

